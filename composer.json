{
  "name": "mbvb1223/pinecone-php-client",
  "description": "A PHP SDK for Pinecone vector database",
  "type": "library",
  "license": "Apache-2.0",
  "keywords": [
    "pinecone",
    "vector",
    "database",
    "embeddings",
    "similarity",
    "search",
    "ai",
    "ml"
  ],
  "authors": [
    {
      "name": "Khien",
      "email": "phamkhien2309@gmail.com"
    }
  ],
  "require": {
    "php": ">=8.1",
    "guzzlehttp/guzzle": "^7.0",
    "guzzlehttp/psr7": "^2.0",
    "psr/http-message": "^1.0",
    "psr/log": "^3.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^10.0",
    "phpstan/phpstan": "^1.10",
    "squizlabs/php_codesniffer": "^3.7",
    "php-cs-fixer/shim": "^3.0",
    "mockery/mockery": "^1.5"
  },
  "autoload": {
    "psr-4": {
      "Mbvb1223\\Pinecone\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Mbvb1223\\Pinecone\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "phpunit",
    "test-coverage": "phpunit --coverage-html coverage",
    "phpstan": "phpstan analyse src --level=8",
    "cs-check": "phpcs src tests --standard=PSR12",
    "cs-fix": "phpcbf src tests --standard=PSR12",
    "php-cs-fixer": "php-cs-fixer fix --diff --dry-run",
    "php-cs-fixer-fix": "php-cs-fixer fix --diff"
  },
  "config": {
    "sort-packages": true,
    "allow-plugins": {
      "php-http/discovery": true
    }
  },
  "minimum-stability": "stable",
  "prefer-stable": true
}
